<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qbk.mapper.NotificationRecordMapper">
    <resultMap id="BaseResultMap" type="com.qbk.entity.NotificationRecord">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="order_id" property="orderId" jdbcType="VARCHAR"/>
        <result column="order_status" property="orderStatus" jdbcType="INTEGER"/>
        <result column="channel" property="channel" jdbcType="INTEGER"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="BIT"/>
        <result column="fail_reason" property="failReason" jdbcType="VARCHAR"/>
        <result column="retry_count" property="retryCount" jdbcType="INTEGER"/>
        <result column="next_retry_time" property="nextRetryTime" jdbcType="TIMESTAMP"/>
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
        <result column="update_date" property="updateDate" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="insert" parameterType="com.qbk.entity.NotificationRecord">
        INSERT INTO notification_record (
            user_id, order_id, order_status, channel, content, status,
            fail_reason, retry_count, next_retry_time, create_date, update_date
        ) VALUES (
            #{userId}, #{orderId}, #{orderStatus}, #{channel}, #{content}, #{status},
            #{failReason}, #{retryCount}, #{nextRetryTime}, NOW(), NOW()
        )
    </insert>

    <update id="update" parameterType="com.qbk.entity.NotificationRecord">
        UPDATE notification_record
        SET
            status = #{status},
            fail_reason = #{failReason},
            retry_count = #{retryCount},
            next_retry_time = #{nextRetryTime},
            update_date = NOW()
        WHERE
            id = #{id}
    </update>

    <select id="getById" resultMap="BaseResultMap">
        SELECT * FROM notification_record
        WHERE id = #{id}
    </select>

    <select id="getByUserId" resultMap="BaseResultMap">
        SELECT * FROM notification_record
        WHERE user_id = #{userId}
    </select>

    <select id="getAll" resultMap="BaseResultMap">
        SELECT * FROM notification_record
        ORDER BY create_date DESC
        LIMIT #{size} OFFSET #{page} * #{size}
    </select>

    <select id="getRetryRecords" resultMap="BaseResultMap">
        SELECT * FROM notification_record
        WHERE status = 0
          AND next_retry_time <= #{currentTime}
    </select>
</mapper>
