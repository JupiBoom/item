<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qbk.web.mapper.ProductMapper">

    <resultMap id="ProductResultMap" type="com.qbk.entity.Product">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="price" property="price" jdbcType="DECIMAL" />
        <result column="stock" property="stock" jdbcType="INTEGER" />
        <result column="image" property="image" jdbcType="VARCHAR" />
        <result column="description" property="description" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    </resultMap>

    <select id="selectProductById" parameterType="java.lang.Long" resultMap="ProductResultMap">
        SELECT id, name, price, stock, image, description, create_time, update_time
        FROM product
        WHERE id = #{id}
    </select>

    <update id="updateProductStock" parameterType="java.util.Map">
        UPDATE product
        SET stock = #{stock}
        WHERE id = #{id}
    </update>

</mapper>
